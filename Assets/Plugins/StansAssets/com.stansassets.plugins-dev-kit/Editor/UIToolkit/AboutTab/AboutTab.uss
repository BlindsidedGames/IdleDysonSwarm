SettingsBlock {
    flex-shrink: 0;
}

.description {
    flex-wrap: wrap;
    flex-shrink: 0;
}

.icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
}

.icon-game {
    background-image: url('../../Art/Icons/About/game.png');
}

.icon-plugin {
    background-image: url('../../Art/Icons/About/plugin.png');
}

.icon-team {
    background-image: url('../../Art/Icons/About/team.png');
}

.icon-linkedin {
    background-image: url('../../Art/Icons/Social/linkedin.png');
}

.icon-twitter {
    background-image: url('../../Art/Icons/Social/twitter.png');
}

.icon-facebook {
    background-image: url('../../Art/Icons/Social/facebook.png');
}

.icon-youtube {
    background-image: url('../../Art/Icons/Social/youtube.png');
}

.icon-google-plus {
    background-image: url('../../Art/Icons/Social/google-plus.png');
}

.icon-twitch {
    background-image: url('../../Art/Icons/Social/twitch.png');
}

.contact-text {
    padding: 0 0 0 6px;
}

.contact-container {
    margin: 0 13px 0 13px;
    flex-direction: row;
    flex-wrap: wrap;
}

.contact-element {
    margin-top: 10px;
    flex-direction: row;
    margin-right: 5px;
    min-height: 20px;
    flex-shrink: 0;
    width: 100px;
}

.logo-container {
    margin-top: 5px;
    width: 200px;
    height: 59px;
}

.icon-logo {
    background-image: url('../../Art/Icons/About/sa_logo_small.png');
    width: 200px;
    height: 59px;
}

.mail {
    -unity-font-style: bold;
    margin-left: 10px;
    -unity-text-align: middle-left;
    flex-shrink: 0;
    flex-grow: 0;
    /*margin-right: 68%;*/
}

.mail:hover {
    border-width: 0;
}

.row {
    flex-direction: row;
}